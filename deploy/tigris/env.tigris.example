# CRDTBase direct-S3 runtime settings (Tigris-compatible)

# Required
export CRDTBASE_S3_BUCKET=crdtbase
export CRDTBASE_S3_ENDPOINT=https://<your-tigris-s3-endpoint>
export CRDTBASE_S3_ACCESS_KEY_ID=<your-access-key-id>
export CRDTBASE_S3_SECRET_ACCESS_KEY=<your-secret-access-key>

# Optional
export CRDTBASE_BACKEND=s3
export CRDTBASE_SITE_ID=site-a
export CRDTBASE_S3_PREFIX=deltas
export CRDTBASE_S3_REGION=auto
export CRDTBASE_S3_SESSION_TOKEN=
export CRDTBASE_S3_FORCE_PATH_STYLE=false
